{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++ - Build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/my_drefine",
            "args": [
                "--network",
                "${workspaceFolder}/benchmarks/networks/cifar10/cifar_relu_4_100.tf",
                "--dataset-file",
                "${workspaceFolder}/benchmarks/dataset/cifar10/cifar10_test.csv",
                "--dataset",
                "CIFAR10",
                "--tool",
                "deeppoly",
                "--image-index",
                "14"
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name":  "LD_LIBRARY_PATH",
                    // "value": "${workspaceFolder}/build/gurobi912/linux64/lib:${workspaceFolder}/build/xt-build/lib:${workspaceFolder}/build/lapack-release/installed/lib:${workspaceFolder}/build/boost_1_78_0/installed/lib",
                    "value": "${workspaceFolder}/build/gurobi912/linux64/lib:${workspaceFolder}/build/xt-build/lib"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++ build active file",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}